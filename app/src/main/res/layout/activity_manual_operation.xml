<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dddddd"
        android:orientation="vertical">

        <include
            android:id="@+id/includeTitle"
            layout="@layout/update_location_title"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="0dp"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="@string/txt_pallet_no" />

                    <EditText
                        android:id="@+id/pallet_no_Manual"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:inputType="none"
                        android:textAlignment="center"  />

                    <Button
                        android:id="@+id/clear_0_Manual"
                        style="@style/Button_X"  />
                </LinearLayout>
                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="0dp"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="@string/txt_delivery_no" />

                    <EditText
                        android:id="@+id/delivery_no_Manual"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/clear_1_Manual"
                        style="@style/Button_X"  />

                    <Button
                        android:id="@+id/Action_1_Manual"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="√"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="0dp"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="@string/txt_lot_id_small" />

                    <EditText
                        android:id="@+id/lot_id_Manual"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/clear_2_Manual"
                        style="@style/Button_X" />
                    <Button
                        android:id="@+id/Action_2_Manual"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="√"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="0dp"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="@string/txt_lot_id_big" />

                    <EditText
                        android:id="@+id/lot_id2_Manual"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/clear_7_Manual"
                        style="@style/Button_X" />
                    <Button
                        android:id="@+id/Action_7_Manual"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="√"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="Carton No.:" />
                    <TextView
                        style="@style/TextCommon"
                        android:text=""
                        android:id="@+id/carton_no_Manual"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="@string/txt_cust_part_no" />

                    <EditText
                        android:id="@+id/cust_part_no_Manual"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/clear_4_Manual"
                        style="@style/Button_X"  />
                    <Button
                        android:id="@+id/Action_4_Manual"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="√"
                        android:textColor="@color/white" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="0dp">

                    <Button
                        android:id="@+id/button_add_lot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="Add Lot"
                        android:textColor="@color/white" />

                </LinearLayout>
                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="Cancel Pallet:" />

                    <EditText
                        android:id="@+id/cancel_pallet_txt_manual"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:textAlignment="center"  />
                    <Button
                        android:id="@+id/clear_5_Manual"
                        style="@style/Button_X" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="0dp">

                    <Button
                        android:id="@+id/button_cancel_pallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="Cancel Pallet"
                        android:textColor="@color/white" />

                </LinearLayout>
                <LinearLayout
                style="@style/SettingRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    style="@style/TextCommon"
                    android:text="Lot ID" />

                <EditText
                    android:id="@+id/lot_id_manual_print"
                    style="@style/TextEdit"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:textAlignment="center"  />
                    <Button
                        android:id="@+id/clear_6_Manual"
                        style="@style/Button_X" />
                    <Button
                        android:id="@+id/Action_6_Manual"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="√"
                        android:textColor="@color/white" />

            </LinearLayout>
                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="@string/txt_pallet_id" />

                    <EditText
                        android:id="@+id/pallet_id2_manual"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:imeOptions="actionDone"
                        android:textAlignment="center"  />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="0dp">

                    <Button
                        android:id="@+id/button_print_manual"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="补打"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>