<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dddddd"
        android:orientation="vertical">

        <include
            android:id="@+id/includeTitle"
            layout="@layout/update_location_title"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dddddd"
                    android:orientation="vertical"
                    android:scrollbars="vertical" >

                    <LinearLayout
                        style="@style/SettingRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            style="@style/TextCommon"
                            android:text="@string/txt_input_order" />

                        <EditText
                            android:id="@+id/do_no_9500"
                            style="@style/TextEdit"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:imeOptions="actionDone"
                            android:textAlignment="center"  />

                        <Button
                            android:id="@+id/clear_0_9500"
                            style="@style/Button_X" />
                        <Button
                            android:id="@+id/search_9500"
                            android:layout_width="73dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_bottom_confirm_bg"
                            android:text="@string/txt_search"
                            android:textColor="@color/white" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ERP回复列表" />

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/table_1_9500"
                        android:layout_width="match_parent"
                        android:layout_height="162dp" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="@string/txt_pallet_no" />

                    <EditText
                        android:id="@+id/pallet_no_9500"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/clear_1_9500"
                        style="@style/Button_X" />

                    <Button
                        android:id="@+id/Action_1_9500"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="√"
                        android:textColor="@color/white" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:orientation="vertical"
                android:padding="20dp" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="验证成功列表" />

                <com.bin.david.form.core.SmartTable
                    android:id="@+id/table_2_9500"
                    android:layout_width="match_parent"
                    android:layout_height="161dp" />
            </LinearLayout>
                <LinearLayout
                    style="@style/SettingRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        style="@style/TextCommon"
                        android:text="车牌号:" />

                    <EditText
                        android:id="@+id/car_no_9500"
                        style="@style/TextEdit"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:imeOptions="actionDone"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/clear_2_9500"
                        style="@style/Button_X" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/out_9500"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_bottom_confirm_bg"
                        android:text="出货"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>