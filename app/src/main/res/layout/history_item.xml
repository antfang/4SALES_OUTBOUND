<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/txtFosbId"
                    style="@style/TextHistory"
                    android:text="090000002A"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDryStart"
                    style="@style/TextHistory"
                    android:text="2019/11/29 12:10:10" />

                <TextView
                    android:id="@+id/txtDryEnd"
                    style="@style/TextHistory"
                    android:text="2019/11/29 12:10:10" />

                <TextView
                    android:id="@+id/txtNextClean"
                    style="@style/TextHistory"
                    android:text="2019/11/29 12:10:10" />
                <TextView
                    android:id="@+id/txtLocation"
                    style="@style/TextHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location_1" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnRePrint"
                style="@style/ButtonBase"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="@string/txt_print" />


        </LinearLayout>

        <View style="@style/LineHorizontal"
            android:background="@color/gray"/>
    </LinearLayout>
</layout>